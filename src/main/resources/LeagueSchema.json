{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "Representation of Ice Hockey League",
  "type": "object",
  "required": ["leagueName", "gameplayConfig", "conferences", "freeAgents", "coaches", "generalManagers"],
  "properties": {
    "leagueName": { "$ref": "#/definitions/nonEmptyString" },
    "gameplayConfig": { "$ref":  "#/definitions/gameplayConfiguration" },
    "conferences": {
      "type": "array",
      "items": { "$ref": "#/definitions/conference" }
    },
    "freeAgents": {
      "type": "array",
      "items": { "$ref": "#/definitions/freeAgent" }
    },
    "coaches": {
      "type": "array",
      "items": { "$ref": "#/definitions/coach" }
    },
    "generalManagers": {
      "type": "array",
      "items": { "$ref": "#/definitions/nonEmptyString" }
    }
  },
  "definitions": {
    "nonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "gameplayConfiguration": {
      "type": "object",
      "description": "Configuration about the gameplay for current league",
      "required": ["aging", "gameResolver", "injuries", "training", "trading"],
      "properties": {
        "aging": { "$ref": "#/definitions/agingConfig" },
        "injuries": { "$ref": "#/definitions/injuriesConfig" },
        "training": { "$ref": "#/definitions/trainingConfig" },
        "trading": { "$ref": "#/definitions/tradingConfig" }
      }
    },
    "agingConfig": {
      "type": "object",
      "required": ["averageRetirementAge", "maximumAge", "statDecayChance"],
      "properties": {
        "averageRetirementAge": {
          "type": "number"
        },
        "maximumAge": {
          "type": "number"
        },
        "statDecayChance": {
          "type": "number"
        }
      }
    },
    "injuriesConfig": {
      "type": "object",
      "required": ["randomInjuryChance", "injuryDaysLow", "injuryDaysHigh"],
      "properties": {
        "randomInjuryChance": {
          "type": "number"
        },
        "injuryDaysLow": {
          "type": "number"
        },
        "injuryDaysHigh": {
          "type": "number"
        }
      }
    },
    "trainingConfig": {
      "type": "object",
      "required": ["daysUntilStatIncreaseCheck"],
      "properties": {
        "daysUntilStatIncreaseCheck": {
          "type": "number"
        }
      }
    },
    "tradingConfig": {
      "type": "object",
      "required": ["lossPoint", "randomTradeOfferChance", "maxPlayersPerTrade", "randomAcceptanceChance", "gmTable"],
      "properties": {
        "lossPoint": {
          "type": "number"
        },
        "randomTradeOfferChance": {
          "type": "number"
        },
        "maxPlayersPerTrade": {
          "type": "number"
        },
        "randomAcceptanceChance": {
          "type": "number"
        },
        "gmTable": {
          "$ref": "#/definitions/gmTableConfig"
        }
      }
    },
    "gmTableConfig": {
      "type": "object",
      "required": ["shrewd", "gambler", "normal"],
      "properties": {
        "shrewd" : {
          "type": "number"
        },
        "gambler": {
          "type": "number"
        },
        "normal": {
          "type": "number"
        }
      }
    },
    "conference": {
      "type": "object",
      "description": "Representation of a conference in Ice Hockey League",
      "required": ["conferenceName", "divisions"],
      "properties": {
        "conferenceName": { "$ref": "#/definitions/nonEmptyString" },
        "divisions": {
          "type": "array",
          "items": { "$ref": "#/definitions/division" }
        }
      }
    },
    "division": {
      "type": "object",
      "description": "Representation of a division in Ice Hockey League",
      "required": ["divisionName", "teams"],
      "properties": {
        "divisionName": { "$ref": "#/definitions/nonEmptyString" },
        "teams": {
          "type": "array",
          "items": { "$ref": "#/definitions/team" }
        }
      }
    },
    "team": {
      "type": "object",
      "description": "Representation of a team in Ice Hockey League",
      "required": ["teamName", "generalManager", "headCoach", "players"],
      "properties": {
        "teamName": { "$ref": "#/definitions/nonEmptyString" },
        "generalManager": { "$ref": "#/definitions/generalManager" },
        "headCoach": { "$ref": "#/definitions/coach" },
        "players": {
          "type": "array",
          "items": { "$ref": "#/definitions/player" }
        }
      }
    },
    "player": {
      "type": "object",
      "description": "Representation of a player in Ice Hockey League",
      "required": ["playerName", "position", "captain", "skating", "shooting", "checking", "saving", "birthDay", "birthMonth", "birthYear"],
      "properties": {
        "playerName": { "$ref": "#/definitions/nonEmptyString" },
        "position": {
          "type": "string",
          "enum": ["forward", "defense", "goalie"]
        },
        "captain": {
          "type": "boolean"
        },
        "skating": {
          "type": "number",
          "minimum": 1,
          "maximum": 20
        },
        "shooting": {
          "type": "number",
          "minimum": 1,
          "maximum": 20
        },
        "checking": {
          "type": "number",
          "minimum": 1,
          "maximum": 20
        },
        "saving": {
          "type": "number",
          "minimum": 1,
          "maximum": 20
        },
        "birthDay": {
          "type": "number",
          "minimum": 1,
          "maximum": 31
        },
        "birthMonth": {
          "type": "number",
          "minimum": 1,
          "maximum": 12
        },
        "birthYear": {
          "type": "number"
        }
      }
    },
    "freeAgent": {
      "type": "object",
      "description": "Representation of a free agent in Ice Hockey League",
      "required": ["playerName", "position", "skating", "shooting", "checking", "saving", "birthDay", "birthMonth", "birthYear"],
      "properties": {
        "playerName": { "$ref": "#/definitions/nonEmptyString" },
        "position": {
          "type": "string",
          "enum": ["forward", "defense", "goalie"]
        },
        "skating": {
          "type": "number",
          "minimum": 1,
          "maximum": 20
        },
        "shooting": {
          "type": "number",
          "minimum": 1,
          "maximum": 20
        },
        "checking": {
          "type": "number",
          "minimum": 1,
          "maximum": 20
        },
        "saving": {
          "type": "number",
          "minimum": 1,
          "maximum": 20
        },
        "birthDay": {
          "type": "number",
          "minimum": 1,
          "maximum": 31
        },
        "birthMonth": {
          "type": "number",
          "minimum": 1,
          "maximum": 12
        },
        "birthYear": {
          "type": "number"
        }
      }
    },
    "coach": {
      "type": "object",
      "description": "Representation of a coach in Ice Hockey League",
      "required": ["name", "skating", "shooting", "checking", "saving"],
      "properties": {
        "name": { "$ref": "#/definitions/nonEmptyString" },
        "skating": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "shooting": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "checking": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "saving": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      }
    },
    "generalManager": {
      "type": "object",
      "required": ["name", "personality"],
      "properties": {
        "name": { "$ref": "#/definitions/nonEmptyString" },
        "personality": {
          "type": "string",
          "enum": ["shrewd", "gambler", "normal"]
        }
      }
    }
  }
}